<Window x:Class="Clicker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Clicker"
        mc:Ignorable="d"
        Title="Editor" Height="470" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="137"/>
            <RowDefinition Height="31"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="31"/>
            <RowDefinition Height="50"/>

            <RowDefinition Height="31"/>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="90"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="90"/>


            <ColumnDefinition Width="210*"/>

            <ColumnDefinition Width="13*"/>
            <ColumnDefinition Width="90*"/>
            <ColumnDefinition Width="30"/>

            <ColumnDefinition Width="90*"/>


            <ColumnDefinition Width="177*"/>
        </Grid.ColumnDefinitions>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="7*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
        </Grid>
        <ListBox x:Name="NamesOfEnemies" Grid.Row="1" Grid.Column="0" Grid.RowSpan="6" Grid.ColumnSpan="3" ItemsSource="{Binding enemyList.enemies}" SelectedItem="{Binding selectedEnemy}" DisplayMemberPath="Name"/>
 
        <Button x:Name="SaveButton" Grid.Row="7" Grid.Column="0" Content="Save" FontSize="17" Click="SaveButton_Click"/>
        <Button x:Name="LoadButton" Grid.Row="7" Grid.Column="2" Content="Load" FontSize="17" Click="LoadButton_Click"/>
        <Button x:Name="AddButton" Grid.Row="7" Grid.Column="4" Content="Add" FontSize="17"  Grid.ColumnSpan="2" Height="50" VerticalAlignment="Top" Click="AddButton_Click"  />
        <Button x:Name="RemoveButton" Grid.Row="7" Grid.Column="7" Content="Remove" FontSize="17" Height="50" VerticalAlignment="Top" Click="RemoveButton_Click" />
        <TextBlock x:Name="SpawnChanceBlock" Grid.Row="7" Grid.Column="3" Text="{Binding selectedEnemy.SpawnChance }" />
        <TextBlock x:Name="LifeModifier" Grid.Row="5" Grid.Column="3" Text="{Binding selectedEnemy.LifeModifier}" />
        <TextBlock x:Name="BaseLifeBlock" Grid.Row="3" Grid.Column="3" Text="{Binding selectedEnemy.BaseLife}" />
        <TextBlock x:Name="BaseGoldBlock" Grid.Row="3" Grid.Column="5" Grid.ColumnSpan="3" Text="{Binding selectedEnemy.BaseGold}" />
        <TextBlock x:Name="GoldModifireBlock" Grid.Row="5" Grid.Column="5" Grid.ColumnSpan="3" Text="{Binding selectedEnemy.GoldModifier}" />
        <TextBlock Grid.Column="0" Text="List of enemies:" VerticalAlignment="Center" Grid.ColumnSpan="3" FontSize="14" Height="18" />
        <TextBlock Grid.Row="2" Grid.Column="3" Text="Base life:" VerticalAlignment="Center" FontSize="14" Height="19" />
        <TextBlock Grid.Row="2" Grid.Column="5" Text="Base gold:" VerticalAlignment="Center" FontSize="14" Height="19" />
        <TextBlock Grid.Row="4" Grid.Column="5" Text="Gold modifier:" VerticalAlignment="Center" FontSize="14" Height="19" />
        <TextBlock Grid.Row="4" Grid.Column="3" Text="Life Modifier:" VerticalAlignment="Center" FontSize="14" Height="19" />
        <TextBlock Grid.Row="6" Grid.Column="3" Text="Spawn Chance (1-100):" VerticalAlignment="Center" FontSize="14" Height="19" />




    </Grid>
</Window>
